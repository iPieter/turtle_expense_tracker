rule "expense"
  when
    Expense(amount > 10, $amount: amount)
  then
    publish Achievement( "01", "Bob saved some money", $amount )
end

rule "cheese"
  when
    Expense(amount > 300, category == "Kaas" )
  then
    publish Achievement( "05", "A lot of cheese", "Spent more than â‚¬ 300 on cheese" )
end